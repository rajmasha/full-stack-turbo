{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "outDir": "dist",
      "rootDir": "."
    },
    "include": ["src/**/*.ts", "generated/**/*.ts", "generated/**/*.js", "node_modules/.prisma/client"],
    "exclude": ["node_modules", "dist"]
}
